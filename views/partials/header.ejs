<header class="site-header">
  <div class="top-bar">
    <div class="container d-flex flex-column flex-lg-row align-items-center justify-content-between gap-2">
      <div class="top-bar__tagline"><i class="fa-solid fa-truck-medical me-2"></i>Працюємо для фронту та волонтерів 24/7</div>
      <div class="top-bar__links d-flex align-items-center gap-3">
        <a class="top-bar__link" href="mailto:info@volonterka.org"><i class="fa-solid fa-envelope me-1"></i>info@volonterka.org</a>
        <a class="top-bar__link" href="https://t.me/volonterka" target="_blank" rel="noopener"><i class="fa-brands fa-telegram me-1"></i>Telegram</a>
        <a class="top-bar__link" href="tel:+380931234567"><i class="fa-solid fa-phone me-1"></i>+38 (093) 123 45 67</a>
      </div>
    </div>
  </div>
  <div class="container nav-container">
    <a href="/" class="logo d-flex align-items-center text-decoration-none">
      <span class="logo-icon"><i class="fa-solid fa-hand-holding-heart"></i></span>
      <span class="logo-text">Фонд <strong>Волонтерка</strong></span>
    </a>
    <button class="nav-toggle" type="button" aria-label="Перемкнути головне меню" aria-expanded="false">
      <span class="nav-toggle__icon"><i class="fa-solid fa-bars"></i></span>
      <span class="nav-toggle__label">Меню</span>
    </button>
    <nav class="main-nav" aria-label="Головне меню">
      <ul class="main-nav-list">
        <li><a class="<%= currentPath === '/' ? 'active' : '' %>" href="/">Головна</a></li>
        <li><a class="<%= currentPath === '/donations' ? 'active' : '' %>" href="/donations">Підтримати</a></li>
        <li><a class="<%= currentPath === '/cars' ? 'active' : '' %>" href="/cars">Автопарк</a></li>
        <li><a class="<%= currentPath === '/volunteers' ? 'active' : '' %>" href="/volunteers">Волонтерам</a></li>
        <li><a class="<%= currentPath === '/documents' ? 'active' : '' %>" href="/documents">Документи</a></li>
        <li><a class="<%= currentPath === '/contacts' ? 'active' : '' %>" href="/contacts">Контакти</a></li>
        <% if (!currentUser) { %>
          <li><a class="<%= currentPath === '/articles' ? 'active' : '' %>" href="/articles">Новини</a></li>
        <% } %>
        <li class="nav-divider" aria-hidden="true"></li>
        <li><a class="btn btn-sm btn-warning nav-btn" href="/donations"><i class="fa-solid fa-heart me-1"></i>Задонатити</a></li>
        <% if (currentUser) { %>
          <li><a class="<%= currentPath === '/live' ? 'active' : '' %>" href="/live">Прямий ефір</a></li>
          <% if (currentUser.role === 'admin') { %>
            <li><a class="<%= currentPath.startsWith('/admin') ? 'active' : '' %>" href="/admin/dashboard">Адмінка</a></li>
          <% } %>
          <li class="nav-user">
            <i class="fa-solid fa-circle-user"></i>
            <span><%= currentUser.full_name || currentUser.email %></span>
          </li>
          <li>
            <form method="POST" action="/auth/logout" class="nav-logout">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <button class="btn btn-sm btn-outline-light" type="submit"><i class="fa-solid fa-right-from-bracket me-1"></i>Вийти</button>
            </form>
          </li>
        <% } else { %>
          <li><a class="btn btn-sm btn-outline-light nav-btn" href="/auth/login"><i class="fa-solid fa-right-to-bracket me-1"></i>Вхід</a></li>
          <li><a class="btn btn-sm btn-outline-light nav-btn" href="/auth/register"><i class="fa-solid fa-user-plus me-1"></i>Стати донатором</a></li>
        <% } %>
      </ul>
    </nav>
  </div>
</header>
