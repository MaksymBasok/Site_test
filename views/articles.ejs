<%- include('partials/layout-start') %>
<section class="page-header">
  <h1>Новини та звіти</h1>
  <p class="lead">Офіційні оновлення фонду, історії волонтерів та прозорі звіти.</p>
</section>
<section class="mt-4">
  <div class="row g-4">
    <% articles.forEach(function(article) { %>
      <div class="col-md-6 col-lg-4">
        <div class="card h-100 shadow-sm article-card">
          <% if (article.cover_image) { %>
            <img src="/<%= article.cover_image %>" class="card-img-top" alt="<%= article.title %>">
          <% } %>
          <div class="card-body d-flex flex-column">
            <h2 class="h5"><a href="/articles/<%= article.id %>"><%= article.title %></a></h2>
            <% if (article.excerpt) { %>
              <p class="text-muted"><%= article.excerpt %></p>
            <% } %>
            <div class="mt-auto text-muted small">
              <i class="fa-regular fa-calendar me-1"></i>
              <%= article.published_at ? new Date(article.published_at).toLocaleDateString('uk-UA') : 'Очікує публікації' %>
            </div>
          </div>
        </div>
      </div>
    <% }) %>
    <% if (articles.length === 0) { %>
      <div class="col-12">
        <div class="alert alert-info">Поки що немає публікацій. Слідкуйте за оновленнями!</div>
      </div>
    <% } %>
  </div>
</section>
<%- include('partials/layout-end') %>
