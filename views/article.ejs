<%- include('partials/layout-start') %>
<section class="page-header">
  <h1><%= article.title %></h1>
  <p class="text-muted"><i class="fa-regular fa-calendar me-1"></i><%= article.published_at ? new Date(article.published_at).toLocaleDateString('uk-UA') : 'Очікує публікації' %></p>
</section>
<section class="mt-4">
  <div class="article-body">
    <% if (article.cover_image) { %>
      <img class="img-fluid rounded mb-4" src="/<%= article.cover_image %>" alt="<%= article.title %>">
    <% } %>
    <p class="lead"><%= article.excerpt %></p>
    <p><%= article.body %></p>
  </div>
  <a class="btn btn-outline-primary mt-3" href="/articles"><i class="fa-solid fa-arrow-left me-1"></i>До всіх матеріалів</a>
</section>
<%- include('partials/layout-end') %>
